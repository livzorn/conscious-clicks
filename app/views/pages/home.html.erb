<div class="homepage-background">
  <div class="container-homepage">
    <div class="homepage-top">
      <div class="homepage-left">

        <h2 class="main-message">I'm too smart to be brainwashed by ads.</h2>
        <h2><%= @message %></h2>

        <div class="homepage-bookmarks">
          <%= image_tag("gmail-screenshot.png", class: "bookmark-circle") %>
          <%= image_tag("google-screenshot.png", class: "bookmark-circle") %>
          <%= image_tag("kitt-screenshot.png", class: "bookmark-circle") %>
          <%= image_tag("rubydocs-screenshot.png", class: "bookmark-circle") %>
        </div>

        <div class="homepage-buttons">
          <a href="/new_user_mood" class="btn-homepage">Mood check-in</a>
          <a href="#" class="btn-homepage">Dashboard</a>
        </div>

      </div>

      <div class="homepage-right">

        <div class="big-picture goals">
          <p>Big picture</p>
          <input type="text" data-test="big-picture" autocomplete="off" label="big picture" class="typebox">
        </div>

        <div class="little-goals goals">
          <p>Little goals</p>
          <input type="text" data-test="little-goals" autocomplete="off" label="little goals" class="typebox">
        </div>

      </div>

    </div>

    <div class="homepage-bottom">

      <div id="lollipop">
        <%= link_to @treat, target: :_blank do %>
          <img src="https://img.icons8.com/dusk/64/000000/cherry-chupa-chups.png"/>
        <% end %>
      </div>

      <input type="text" data-test="custom-messages" autocomplete="off" class="typebox custom-message">

    </div>
  </div>
</div>
