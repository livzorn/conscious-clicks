<%= content_for :meta_title, "Conscious Clicks" %>
<%= content_for :meta_description, "Dashboard" %>

<!-- Color scheme nodal: -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="exampleModalLongTitle">What colors inspire you?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="mood-icons" id="mood-form">
          <%= simple_form_for current_user do |f| %>
            <%= f.input :color, as: :radio_buttons, label: false, collection: ["#A5B8FF", "#6EA7FD", "#74E0EF", "#95DFB7", "#000000"] %>
          <%= f.submit 'Submit', class: "btn btn-mood-submit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="dashboard-background" style="background: linear-gradient(359.61deg, #FFFFFF -186.67%, rgba(255, 255, 255, 0) 99.72%), <%= current_user.color %>;">
