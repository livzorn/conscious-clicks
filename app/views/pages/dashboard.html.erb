<div class="dashboard-background">
  <div class="container-dashboard">
        <div class="dashboard-left">
          <div class="d-flex flex-column justify-content-center align-items-center">
            <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
            <h3 class="padding">  <%= current_user.email%></h3>
          </div>
          <div class="stats">
            <p class="text-center">Stats</p>
          </div>
          <div class="card-dashboard">

          </div>
        </div>


        <div class="dashboard-right">

          <div class="card-dashboard">

            <p class="text-center">Calendar</p>
            <% (Date::DAYNAMES[1..-1] << Date::DAYNAMES.first).each_with_index do |day, index|  %>
            <div class="weekday">
              <%= day %>
              <%= @average_mood_today&.emoji %>
            </div>
            <% end %>

          </div>
          <div class="card-dashboard">
             <p class="text-center">Bookmarked sites</p>
             <% current_user.bookmarks.each do |bookmark| %>
               <%= link_to bookmark.link do%>
                <button>
                  <%= bookmark.name %>
                </button>
                <%end%>
                <%=link_to bookmark_path(bookmark.id), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="far fa-trash-alt"></i> </p>
                  <%end%>
               <%end%>

             <div class="dropdown">
                <button onclick="myFunction()" class="dropbtn"><i class="fa fa-plus" aria-hidden="true"></i></button>


                <div id="myDropdown" class="dropdown-content">
                  <div class="newbookmark_container">
                  <%= simple_form_for [ @user, @bookmark ] do |f| %>
                  <%= f.input :name %>
                  <%= f.input :link %>
                  <%= f.submit "add", class: "btn btn-primary" %>
                  <% end %>
                </div>
                </div>
                <script>
                    function myFunction() {
                      document.getElementById("myDropdown").classList.toggle("show");
                    }
                     document.querySelector('.dropbtn').onclick = myFunction
                </script>
              </div>
          </div>

          <div class="card-dashboard">
            <p class="text-center">My Message sets</p>
              <% current_user.message_sets.each do |message_set| %>
                <%= message_set.theme %>
            <% end %>

          </div>
          <div class="card-dashboard">
             <p class="text-center">Others</p>
          </div>

        </div>
  </div>
</div>
